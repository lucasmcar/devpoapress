<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>
<div class="container">
    <h2>Título da Categoria</h2>
    <form method="post" action="/articles/save" class="mt-2">
        <div class="form-group">
            <label>Nome da categoria</label>
            <input type="text" name="title" placeholder="Defina o título" class="form-control">
        </div>

        <div class="form-group">
            <label>Nome da categoria</label>
            <textarea name="body" id="article" placeholder="Defina o título" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Selecione uma categoria</label>
            <select class="form-control-sm" name="category">
                <option value=""></option>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>"><%= category.title %></option>
                <% }) %>
            </select>
        </div>
        
        <button class="btn btn-success">Enviar</button>
    </form>
</div>
<%- include('../../partials/footer') %>
<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector:"#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace fullscreen insertdatetime media save table paste cut'
        ]
    })
</script>